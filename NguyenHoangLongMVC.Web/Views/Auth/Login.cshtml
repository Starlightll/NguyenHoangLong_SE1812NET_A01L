@model NguyenHoangLongMVC.Web.ViewModels.LoginModel;
@{
    ViewData["Title"] = "Sign in";
}

<div class="container-xl px-3 px-md-4 px-lg-5">
    <div class="auth-container">
        <div class="auth-box">
            <div class="text-center mb-4">
                @* <img src="/api/placeholder/48/48" alt="Logo" class="auth-logo mb-3"> *@
                <h2 class="auth-title pt-4">Sign in</h2>
            </div>

            <div class="auth-form-container">
                <form asp-action="Login" method="post">
                    <div class="form-group mb-3">
                        <label asp-for="Email" class="form-label">Email</label>
                        <input asp-for="Email" class="form-control custom-input" placeholder="Enter your email" />
                        <span asp-validation-for="Email" class="validation-message"></span>
                    </div>

                    <div class="form-group mb-4">
                        <div class="d-flex justify-content-between">
                            <label asp-for="Password" class="form-label">Password</label>
                            <a asp-action="ForgotPassword" class="forgot-link">Forgot password?</a>
                        </div>
                        <input asp-for="Password" type="password" class="form-control custom-input" placeholder="Enter your password" />
                        <span asp-validation-for="Password" class="validation-message"></span>
                    </div>

                    <button type="submit" class="signin-button">
                        Sign in
                    </button>
                </form>
            </div>

            <div class="auth-footer">
                <p class="text-center mb-0">
                    New to FUNewsManagement?
                    <a asp-action="Register" class="register-link">Create an account</a>
                </p>
            </div>
        </div>
    </div>
</div>

<style>
    .auth-container {
        max-width: 340px;
        margin: 2rem auto;
        padding: 0 1rem;
    }

    .auth-box {
        background: #ffffff;
        border-radius: 6px;
        border: 1px solid #d0d7de;
    }

    .auth-logo {
        border-radius: 50%;
    }

    .auth-title {
        font-size: 24px;
        font-weight: 300;
        letter-spacing: -0.5px;
        color: #24292f;
    }

    .auth-form-container {
        padding: 1.5rem;
    }

    .form-label {
        display: block;
        margin-bottom: 0.5rem;
        font-size: 14px;
        font-weight: 500;
        color: #24292f;
    }

    .custom-input {
        width: 100%;
        padding: 0.5rem 0.75rem;
        font-size: 14px;
        line-height: 20px;
        color: #24292f;
        background-color: #ffffff;
        border: 1px solid #d0d7de;
        border-radius: 6px;
        transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
    }

        .custom-input:focus {
            border-color: #0969da;
            outline: none;
            box-shadow: 0 0 0 3px rgba(9, 105, 218, 0.3);
        }

    .validation-message {
        display: block;
        margin-top: 0.25rem;
        font-size: 12px;
        color: #cf222e;
    }

    .forgot-link {
        font-size: 12px;
        color: #0969da;
        text-decoration: none;
    }

        .forgot-link:hover {
            text-decoration: underline;
        }

    .signin-button {
        display: block;
        width: 100%;
        padding: 0.75rem 1rem;
        font-size: 14px;
        font-weight: 500;
        color: white;
        text-align: center;
        text-decoration: none;
        background: linear-gradient(135deg, #000000 0%, #000000 100%);
        border: none;
        border-radius: 6px;
        cursor: pointer;
        transition: 0.2s ease;
    }

        .signin-button:hover {
            background: linear-gradient(135deg, #000000 0%, #000000 100%);
            transform: translateY(-1px);
        }

        .signin-button:active {
            transform: translateY(0);
        }

    .auth-footer {
        padding: 1rem 1.5rem;
        text-align: center;
        background: #f6f8fa;
        border-top: 1px solid #d0d7de;
        border-radius: 0 0 6px 6px;
    }

    .register-link {
        color: #0969da;
        text-decoration: none;
    }

        .register-link:hover {
            text-decoration: underline;
        }

    
</style>